{% extends 'FrontBundle::layout_logged.html.twig' %}
{% block page_title %}AddressAnimal - Edition contact{% endblock %}
{% block meta_description %}Edition d'un contact dans le carnet d'adresse.{% endblock %}
{% block meta_keywords %}carnet adresse, noteAnimal, vcard, addresses online, contact{% endblock %}
{% block content_page %}
    <form class="form-large" action="{{ path('front_address_edit', {id: address.id}) }}"
          method="POST" {{ form_enctype(form) }} novalidate="novalidate">

        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h2>
                            <i class="fa fa-home"></i>
                            <span class="break">Modification de {{ address.prenom|capitalize }} {{ address.nom|capitalize }}</span>
                        </h2>
                    </div>
                    <div class="box-content">
                        {{ form_errors(form) }}
                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.prenom) }}</span>
                        </div>
                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.nom) }}</span>
                        </div>

                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.telephone) }}</span>
                        </div>

                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.email) }}</span>
                        </div>

                        <div class="form-group clearfix">
                            <div class="box-content">
                                {{ form_rest(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('front_address_index') }}" class="btn btn-md btn-info">
                    <i class="fa fa-arrow-left"></i> Retour
                </a>
                <button type="submit" class="submit btn btn-md btn-warning" style="float:right">
                    <i class="fa fa-pencil"></i> Modifier
                </button>
            </div>
        </div>
    </form>

{% endblock %}
